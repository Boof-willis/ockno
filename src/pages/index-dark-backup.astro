        <!-- Problem Section (Refined) -->
        <section id="problem" class="py-32 border-t border-white/5 bg-page relative overflow-hidden">
             <!-- Top Lighting -->
             <div class="absolute top-0 left-1/2 -translate-x-1/2 w-2/3 h-px bg-gradient-to-r from-transparent via-primary-500/30 to-transparent"></div>
             
             <div class="max-w-6xl mx-auto px-6 relative z-10">
