    <!-- Iconify deferred - non-critical for LCP -->
    <script type="module" src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js" async></script>

    <style is:global>
        /* CSS scroll behavior via JS for smooth control */
        html {
            scroll-behavior: auto;
        }

        body {
            font-feature-settings: "cv02", "cv03", "cv04", "cv11", "ss01";
            -webkit-font-smoothing: antialiased;
            background-color: #020203;
            overflow-x: hidden;
        }

        /* Focus styles for accessibility */
        :focus-visible {
            outline: 2px solid #F97316;
            outline-offset: 2px;
            border-radius: 4px;
        }

        /* Optimized noise - scoped to sections, not viewport fixed */
        .bg-noise {
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulance type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
        }
        
        /* iOS-optimized glass panel - no backdrop-filter to prevent flicker */
        .glass-panel {
            background: rgba(12, 12, 14, 0.85);
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.05);
        }
        
        /* iOS gets solid background */
        @supports (-webkit-touch-callout: none) {
            .glass-panel {
                background: rgba(12, 12, 14, 0.95);
            }
        }
        
        /* Desktop gets blur effect */
        @supports not (-webkit-touch-callout: none) {
            .glass-panel {
                backdrop-filter: blur(8px);
            }
        }

        /* GPU-accelerated text gradient */
        .text-metallic {
            background: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0.7) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Optimized glow card with GPU hints */
        .glow-card {
            position: relative;
            background: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0) 100%);
        }
        
        .glow-card::before {
            content: "";
            position: absolute;
            inset: -1px;
            z-index: -1;
            background: linear-gradient(180deg, rgba(255,255,255,0.1), rgba(255,255,255,0));
            border-radius: inherit;
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

        /* Optimized grid background */
        .grid-bg {
            background-size: 50px 50px;
            background-image: linear-gradient(to right, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
                              linear-gradient(to bottom, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        }
        
        /* 3D Perspective Utility */
        .perspective-1000 {
            perspective: 1000px;
        }

        /* GPU acceleration hints for animated elements - removed permanent will-change */
        .animate-float,
        .animate-pulse,
        .animate-beam,
        .animate-dash,
        .animate-shine {
            transform: translateZ(0);
        }
        
        .animate-fade-in-up {
            animation: fade-in-up 0.8s ease-out forwards;
            transform: translateZ(0);
        }
        
        @media (prefers-reduced-motion: reduce) {
            .animate-float,
            .animate-pulse,
            .animate-beam,
            .animate-dash,
            .animate-shine,
            .animate-fade-in-up {
                animation: none !important;
            }
        }

        /* Optimize hover transitions */
        .group:hover .group-hover\:scale-105 {
            transform: scale(1.05) translateZ(0);
        }

        /* Content visibility - removed to prevent iOS recomposite issues */
        section:not(:first-of-type) {
            contain-intrinsic-size: auto 600px;
        }

        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #020203; }
        ::-webkit-scrollbar-thumb { background: #27272A; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #3F3F46; }
    </style>
</head>
